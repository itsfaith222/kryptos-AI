# === Toggle LLM usage ===
ENABLE_LLM=true

# === ElevenLabs (Educator voice) ===
# Get key: https://elevenlabs.io/app/settings/api-keys
# Voice ID from: https://elevenlabs.io/voice-library
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=your_voice_id

# === Educator Settings ===
EDUCATOR_DEFAULT_LANG=en
EDUCATOR_VOICE_ENABLED=true

# === App behavior ===
OUTPUT_DIR=output
ENABLE_GEMINI=true
ENABLE_ELEVENLABS=true

# === MongoDB (Person D - Database) - Required for scans ===
# Create a cluster at https://www.mongodb.com/cloud/atlas and get connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=YourApp

# === OpenRouter (Analyst, Educator, Scout) - Required for AI agents ===
# OpenRouter proxies to Gemini; get key: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_api_key

# === CORS - Optional; defaults to http://localhost:5173 ===
CORS_ORIGINS=http://localhost:5173
