{
  "manifest_version": 3,
  "name": "Guardian AI - Scout",
  "version": "1.0.0",
  "description": "Real-time protection from scams and privacy violations",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content-styles.css"]
    }
  ]
}
