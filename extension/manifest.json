{
  "manifest_version": 3,
  "name": "Kryptos-AI - Scout",
  "version": "1.0.0",
  "description": "Real-time protection from scams and privacy violations",
  "icons": {
    "32": "icons/icon.png",
    "96": "icons/icon.png",
    "256": "icons/icon.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_icon": {
      "32": "icons/icon.png",
      "64": "icons/icon.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content-styles.css"]
    }
  ]
}
